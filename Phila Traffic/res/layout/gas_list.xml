<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:id="@+id/background3">
    
	<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:id="@+id/background4">
 	<LinearLayout
     android:layout_width="50dp"
     android:layout_alignParentLeft="true"
     android:layout_height="wrap_content"
     android:layout_centerInParent="true"
     android:orientation="vertical"
     android:id="@+id/background5">
     <TextView android:id="@+id/price"
         android:textSize="18dip"
         android:textStyle="bold"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
    </LinearLayout>
    
 	<LinearLayout
 	android:layout_width="wrap_content"
     android:layout_toRightOf="@+id/background5"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_marginRight="50dp"
     android:layout_centerInParent="true"
     android:id="@+id/background6">
     <TextView android:id="@+id/station"
         android:textSize="18dip"
         android:textStyle="bold"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"/>
         
     <TextView android:id="@+id/address"
         android:textSize="15dip"
         android:inputType="textMultiLine"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"/>
	
	<TextView android:id="@+id/city"
         android:textSize="15dip"
         android:inputType="textMultiLine"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"/>
     </LinearLayout>
     <LinearLayout
     android:layout_width="50dp"
     android:layout_height="wrap_content"
     android:layout_alignParentRight="true"
     android:layout_centerInParent="true"
     
     android:orientation="vertical"
     android:id="@+id/background7">   
    <TextView android:id="@+id/distance"
         android:textSize="15dip"
         android:textStyle="italic"
         android:layout_marginRight="5dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
         
     <TextView android:id="@+id/miles"
         android:textSize="15dip"
         android:text="miles"
         android:textStyle="italic"
         android:layout_marginRight="5dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
	</LinearLayout>
	</RelativeLayout>
</LinearLayout>